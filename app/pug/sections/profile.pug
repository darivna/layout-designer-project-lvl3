section#profile.profile.pt-5.px-4.h-100.tab-pane.fade.hide-scrollbar(role="tabpanel" aria-labelledby="profile-tab")
    .profile-title
        h2.section-title.text-dark.font-weight-bold Профиль
        form.search-form.pb-5
            input.form-control.rounded-0.text-secondary.pl-4.shadow-none(type="search" placeholder="Поиск по сообщениям" aria-label="Search")

    .profile-info
        .card.border-0.align-items-center.py-3
            img.card-img-top.rounded-circle(src="/assets/images/avatar_1.jpg" alt="profile-avatar")
            .card-body.text-center 
                h5.card-title.h6.font-weight-bold Кодовёнок Хекслетович
                p.card-text.text-secondary Милый и скромный помощник начинающих разработчиков. Люблю JavaScript
        
        .profile-link.py-3
            ul.list-group.list-group-flush
                li.list-group-item.d-flex.justify-content-between.align-items-center
                    .list-text
                        p.text-title.text-secondary.mb-0 Страна
                        p.text-info.text-dark.mb-0 Москва, Россия
                    img(src="/assets/images/icons/profile/globe.svg")
                
                li.list-group-item.d-flex.justify-content-between.align-items-center
                    .list-text
                        p.text-title.text-secondary.mb-0 Телефон
                        p.text-info.text-dark.mb-0 +7 (499) 123-45-67
                    img(src="/assets/images/icons/profile/phone.svg")

                li.list-group-item.d-flex.justify-content-between.align-items-center
                    .list-text
                        p.text-title.text-secondary.mb-0 Email
                        p.text-info.text-dark.mb-0 nikita.m@hexlet.io
                    img(src="/assets/images/icons/profile/letter.svg")

                li.list-group-item.d-flex.justify-content-between.align-items-center
                    .list-text
                        p.text-title.text-secondary.mb-0 Twitter
                        p.text-info.text-dark.mb-0 @n__mikhaylov
                    img(src="/assets/images/icons/profile/people.svg")
                

                

            