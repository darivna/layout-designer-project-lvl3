header.header.bg-primary.order-2.order-md-1.w-100
    nav.navbar.pr-0.h-100
        a.navbar-brand(href="#")
            img.header-logo(src="../assets/images/icons/logohex.svg")

        ul#my-tab.nav.nav-tabs(role="tablist")
            li.nav-item(role="presentation")
                a#contacts-tab.nav-link.active(data-toggle="tab" href="#contacts" role="tab" aria-controls="contacts" aria-selected="true")
                    svg.icon.icon-people
                        use(xlink:href="../assets/images/sprite/svg/sprite.symbol.svg#people")
                    span.text-light.small Контакты

            li.nav-item
                a.nav-link(href="chat.html")
                    svg.icon.icon-chat
                        use(xlink:href="../assets/images/sprite/svg/sprite.symbol.svg#chat")
                    span.text-light.small Сообщения

            li.nav-item(role="presentation")
                a#profile-tab.nav-link(data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false")
                    svg.icon.icon-person
                        use(xlink:href="../assets/images/sprite/svg/sprite.symbol.svg#person")
                    span.text-light.small Профиль